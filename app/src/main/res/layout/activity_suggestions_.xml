<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/suggestionboximprovebusiness"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shashvatkedia.movieapi.Suggestions_Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/suggestions_text_view"
        android:text="Enter any type of bug you have encountered in the app"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textSize = "25sp"
        android:textColor="@color/colorAccent"
        />

    <EditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/suggestions_data"
        android:layout_below="@id/suggestions_text_view"
        android:textSize="25sp"
        android:layout_marginTop="32dp"
        android:text="Here"
        android:layout_marginLeft="8dp"
        android:textColor="@color/colorAccent"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_email"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:src="@android:drawable/ic_dialog_email"
        app:layout_anchorGravity="bottom|right|end"
        />

</RelativeLayout>
