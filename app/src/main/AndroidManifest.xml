<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shashvatkedia.movieapi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".custom_search" />
        <activity android:name=".Movie_info" />
        <activity android:name=".Cast_display" />
        <activity android:name=".Similar_movie" />
        <activity android:name=".trailer" />
        <activity android:name=".Cast_data" />
        <activity android:name=".Search_Results" />
        <activity android:name=".Suggestions_Activity" />
        <activity android:name=".MovieRecomendation" />
        <activity android:name=".SimilarGenreMovie" />
        <activity android:name=".SettingsActivity"></activity>
    </application>

</manifest>